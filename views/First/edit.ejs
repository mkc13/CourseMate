<% layout('layouts/bp') %>
<div class="row">
    <h1 class="text-center">Update File</h1>
    <div class="col-6 offset-3">
        <form action="/firstfiles_edit/<%=file._id%>" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="subject">Subject</label>
                <input class="form-control" type="text" id="subject" name="first_year[subject]"
                value="<%=file.subject%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="topic">Topic</label>
                <input class="form-control" type="text" id="topic" name="first_year[topic]"
                value="<%=file.topic%>">

            </div>
            <div class="mb-3">
                <label class="form-label" for="contentType">Content Type</label>
                <select class="form-select" id="contentType" name="first_year[contentType]">
                    <option value="assignment">Assignment</option>
                    <option value="questionPaper">Question Paper</option>
                    <option value="studyMaterial">Study Material</option>
                </select>
            </div>
            

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <input class="form-control" type="text" id="description" name="first_year[description]"
                value="<%=file.description%>">

            </div>

            <div class="mb-3">
                <label class="form-label" for="file">File</label>
                <input class="form-control" type="file" id="file" name="file"
                value="<%=file.file%>">

            </div>

            

            <!-- <div class="mb-3">
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="file" name="first_year[file]" multiple>
                    <label class="form-file-label" for="file">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div> -->
            <div class="mb-3">
                <button class="btn btn-success">Update File</button>

            </div>
            
            

        </form>
        
    </div>
    

</div> 
